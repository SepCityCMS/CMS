@page "/articles_search"
@inject HttpClient Http

<PageTitle>Articles Search</PageTitle>

<SepCityCMS.Client.Shared.TopMenus.UTM_Articles />

<h1>Search the Articles</h1>

<div class="col-lg-12">
    <div class="input-group">
        <input type="text" id="q" clientidmode="Static" class="form-control" onkeypress="if(checkEnter(event) == false){document.getElementById('SearchButton').click();return checkEnter(event);}" />
        <span class="input-group-btn">
            <button class="btn btn-primary" id="SearchButton" @onclick="SearchButton_Click">Search</button>
        </span>
    </div>
</div>

<br />

<span id="failureNotification">
    <span id="ErrorMessage" clientidmode="Static"></span>
</span>
    
<div id="ctl00_SiteContent_SearchResults">
    <span id="ctl00_SiteContent_LabelSummary" class="SearchSummary">Results <b>1 - 20</b> of <b>21</b> for <b>windows</b>. (1.8281187 seconds)</span>
    <br>
    <br>
    Result page:
    <b>1</b>
    <a href="articles_search.aspx?q=windows&amp;start=20">2</a>
    <br>
    <!-- Loop -->
    <p class="SearchResults">
    </p>
    <div>
        <a href="http://demo.sepcity.com/article/373647226482375/Windows_7_Starter/">Windows 7 Starter</a>
    </div>
    <div class="SearchURL">
        <a href="http://demo.sepcity.com/article/373647226482375/Windows_7_Starter/">demo.sepcity.com/article/373647226482375/Windows_7_Starter/</a>
    </div>
    <div class="SearchDescription">
        Simpler and easier to use
        Windows 7 Starter makes netbooks easier to use because it puts less between you and what you want to do?ess waiting, less clicking, less hassle connecting to networks. Windows 7 Starter combines the latest in reliability and responsiveness with the familiarity and compatibility of Windows.
    </div>
