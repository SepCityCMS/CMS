    <!-- End Loop -->
    <br>
    Result page:
    <b>1</b>
    <a href="articles_search.aspx?q=windows&amp;start=20">2</a>
</div>

@code {
    private async Task<System.Net.Http.HttpResponseMessage> SearchButton_Click()
    {
        var postBody = new SepCityCMS.Models.Articles { Full_Article = "Blazor POST Request Example" };
        return await Http.PostAsJsonAsync("/api/articles", postBody);
	}
}